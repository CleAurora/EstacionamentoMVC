@using Estacionamento_MVC.Models;
@{
    Layout = "MasterPage";
    ClienteModel cliente = ViewBag.cliente;
}
<div class="container">
    <form action="/Usuario/Editar" method="POST">
        <h2>Edite seus dados</h2>
        <div class="form-group">
            <input type="hidden" value="@cliente.Id" name="id">
            
            <label for="nome">Nome:</label>
            <input type="text" name="nome" value="@cliente.Nome" class="form-control">
            
            <label for="modelo">Modelo:</label>
            <input type="text" name="modelo" value="@cliente.Modelo" class="form-control">
            
            <label for="marca">Marca:</label>
            <input type="text" name="marca" value="@cliente.Marca" class="form-control">
            
            <label for="placa">Placa:</label>
            <input type="text" name="placa" value="@cliente.Placa" class="form-control">
            <br>
            <input type="submit" value="Editar" class="btn-secondary btn-lg btn-block">
            
            
        </div>
    </form>
</div>