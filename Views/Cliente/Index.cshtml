@model EstacionamentoMVC.ViewModels.ClienteViewModel;
@{
    Layout = "MasterPage";
    ViewBag.Title="Cadastro de Clientes";
}
<div class="container">
    <form action="/Cliente/Cadastrar" method="POST">
        <h1>Cadastre-se</h1>
        <div class="form-group">
            
            <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control">

            <label for="modelo">Modelo:</label>
            <select name="modelo">
                <option value="">Selecione</option>
                @foreach (var item in Model.modelos)
                {
                    <option value="@item.Nome">@item.Nome</option>
                }
            </select>            

            <label for="marca">Marca:</label>
            <select name="marca">
                <option value="">Selecione</option>
                @foreach(var item in Model.marcas){
                    <option value="@item.Nome">@item.Nome</option>

                }

            </select>

            <label for="placa">Placa:</label>
            <input type="text" name="placa" class="form-control">

            <br>
            <input type="submit" value="Cadastrar" class="btn btn-secondary btn-lg btn-block">

        </div>
    </form>
</div>